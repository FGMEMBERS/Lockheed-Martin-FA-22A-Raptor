	<PropertyList>
		<sim>
			<description>f22-jsbsim</description>
			<author>Fabrizio Fracaroli</author>
			<status>alpha</status>

			<flight-model>jsb</flight-model>
			<aero>f22-jsbsim</aero>
			<fuel-fraction>0.1</fuel-fraction>

