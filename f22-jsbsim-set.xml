	<model>
		<path>Aircraft/Lockheed-Martin-FA-22A-Raptor/Models/F-22-JSBSIM-Model-File.xml</path>
	<livery>
		<name type="string">x5</name>
		<texture>x5.png</texture>
	</livery>

	<F-22>
		<controls>
		<lighting>
		<anti-collision-switch type="bool">true</anti-collision-switch>
		<hook-bypass type="bool">false</hook-bypass><!-- false = carrier -->
		<index-norm type="double">1</index-norm>
		<position-tail-switch type="int">1</position-tail-switch>
		<position-wing-switch type="int">1</position-wing-switch>
		<position-flash-switch type="bool">true</position-flash-switch>
		</lighting>
		<VDI>
		<brightness type="double">1</brightness>
		<contrast type="double">0.6</contrast>
		<on-off type="bool">0</on-off>
		</VDI>
		<steer>
		<tacan-bt type="bool">true</tacan-bt><!-- 3 -->
		</steer>
		</controls>

		<fx>
		<burner type="int">0</burner>
		<heat-blur-on type="bool">false</heat-blur-on>
		</fx>
		
<instrumentation>
		<path>Aircraft/Lockheed-Martin-FA-22A-Raptor/Systems/instrumentation.xml</path>
<!--		<path>Aircraft/Lockheed-Martin-FA-22A-Raptor/Systems/radar.xml</path>   -->



		<fuel-gauges>
		<total type="double">100</total>
		</fuel-gauges>

		<g-meter>
		<g-max archive="y" type="double">1</g-max>
		<g-min archive="y" type="double">1</g-min>
		</g-meter>
		<radar-altimeter>
		<limit-bug type="double">250</limit-bug>
		</radar-altimeter>

		<aoa-indexer>
		<!-- target = 11.3 deg AoA -->
		<too-slow-deg>13.7</too-slow-deg>	<!-- target +2.4 deg -->
		<slow-deg>12.1</slow-deg>			<!-- target +0.8 deg -->
		<target-deg>11.3</target-deg>		<!-- target -->
		<fast-deg>10.5</fast-deg>			<!-- target -0.8 deg -->
		<too-fast-deg>8.9</too-fast-deg>	<!-- target -2.4 deg -->
		</aoa-indexer>

		<warnings>
		<master-caution type="bool">0</master-caution>
		</warnings>
		</instrumentation>

		<lighting>
			<position-wing-factor type="int">0</position-wing-factor>
			<position-tail-factor type="int">0</position-tail-factor>
		</lighting>

		<systems>
		</systems>
			
			<wings>
				<left-wing-torn type="bool">false</left-wing-torn>
				<right-wing-torn type="bool">false</right-wing-torn>
			</wings>
		</F-22>
	</model>

	<multiplay>
		<chat_display>1</chat_display>
			<generic>
				<int type="int">0</int>
					<int type="int">0</int>
						<int type="int">0</int>
							<int type="int">0</int>
								<int type="int">0</int>
							<int type="int">0</int>
						<int type="bool">0</int>
					<int type="int">0</int>
		</generic>
	</multiplay>

			<rendering>
				<redout>
					<parameters>
						<blackout-complete-g>7.0</blackout-complete-g>
						<blackout-onset-g>5.5</blackout-onset-g>
					</parameters>
				</redout>
			</rendering>
			
	<flaps>
		<setting>0.00</setting>
		<setting>0.50</setting>
		<setting>1.00</setting>
	</flaps>

	<menubar>
		<default>
			<menu n="50">
				<label>F-22</label>
					<item n="0">
					<label>Select Livery</label>
					<binding>
						<command>nasal</command>
						<script>aircraft.livery.dialog.toggle()</script>
					</binding>
				</item>
	
			</menu>
		</default>
	</menubar>

			<view n="0">
	<name>Cockpit View</name>
	<type>lookfrom</type>
	<internal archive="y">true</internal>
	<config>
		<pitch-offset-deg>-4.0</pitch-offset-deg>
		<x-offset-m archive="y">-0.0698712</x-offset-m><!--  direita/esquerda/de z para x   -->
		<y-offset-m archive="y">0.200433</y-offset-m><!-- cima/baixo/de y para y   -->
		<z-offset-m archive="y">-5.05473</z-offset-m><!--  frente/atraz/de x para z  -->
		<pitch-offset-deg>-5</pitch-offset-deg>		

	</config>
	</view>

	<view n="100">
	<name>Instuments view</name>
	<type>lookfrom</type>
	<internal type="bool">false</internal>
	<config>
	<from-model type="bool">true</from-model>
	<from-model-idx type="int">0</from-model-idx>
	<ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
	<x-offset-m archive="y">0.0134498</x-offset-m> <!--  direita/esquerda/de z para x   -->
	<y-offset-m archive="y">2.60718</y-offset-m>  <!-- cima/baixo/de y para y   -->
	<z-offset-m archive="y">-2.17587</z-offset-m> <!--  frente/atraz/de x para z  -->
	<pitch-offset-deg>0</pitch-offset-deg>
	<heading-offset-deg>80</heading-offset-deg>
	<default-field-of-view-deg>57</default-field-of-view-deg>
	<limits>
	<enabled type="bool">true</enabled>
	<left>
	<heading-max-deg type="double">360</heading-max-deg>
	<x-offset-max-m type="double">0.25</x-offset-max-m>
	<x-offset-threshold-deg type="double">45</x-offset-threshold-deg>
	</left>
	<right>
	<heading-max-deg type="double">360</heading-max-deg>
	<x-offset-max-m type="double">0.25</x-offset-max-m>
	<x-offset-threshold-deg type="double">45</x-offset-threshold-deg>
	</right>
	</limits>
	</config>
	</view>

			<view n="1">
				<config>
					<target-z-offset-m archive="y" type="double">0</target-z-offset-m>
					<pitch-offset-deg>0</pitch-offset-deg>
				</config>
			</view>

			<view n="2">
				<config>
					<y-offset-m archive="y" type="double">6.0</y-offset-m>
					<z-offset-m archive="y">-19.7</z-offset-m>
					<target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
				</config>
			</view>

			<view n="3">
				<config>
					<target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
				</config>
			</view>

			<view n="4">
				<config>
					<target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
				</config>
			</view>

			<view n="5">
				<config>
					<target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
				</config>
			</view>

			<view n="6">
				<config>
					<target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
				</config>
			</view>

		</sim>

		<systems>
			<electrical>
				<path>Aircraft/Lockheed-Martin-FA-22A-Raptor/Systems/F-22-electrical.xml</path>
			</electrical>

			<refuel>
				<type>probe</type>
			</refuel>
		</systems>

		<consumables>
			<fuel>
				<tank n="0">
					<name>FWD fuselage</name>
					<kill-when-empty type="bool">false</kill-when-empty>
				</tank>
				<tank n="1">
					<name>AFT fuselage</name>
					<kill-when-empty type="bool">false</kill-when-empty>
				</tank>

				<tank n="2">
					<name>L wing</name>
					<kill-when-empty type="bool">false</kill-when-empty>
				</tank>
				<tank n="3">
					<name>R wing</name>
					<kill-when-empty type="bool">false</kill-when-empty>
				</tank>
				</fuel>
		</consumables>

		<controls>
			<lighting>
				<instruments-norm type="double">0</instruments-norm>
				<panel-norm type="double">0</panel-norm>
				<strobe type="bool">false</strobe>
				<nav-lights type="bool">true</nav-lights>
			</lighting>

			<gear>
				<!-- Start with the Parking Brake on -->
				<brake-parking type="double">1.0</brake-parking>
			</gear>
		</controls>

		<engines>
		<engine n="0">
		<running>true</running>
		</engine>
		<engine n="1">
		<running>true</running>
		</engine>
		</engines>

		<input>
		
	<!--	
	<keyboard n="0" include="../../Input/Keyboard/carrier-bindings.xml">
	</keyboard> -->
		</input>

	<instrumentation>
		<tacan>
			<switch-position type="int">1</switch-position>
		</tacan>
		<nav>
			<frequencies>
				<selected-freq type="double">115.8</selected-freq>
				<standby-freq type="double">115.8</standby-freq>
			</frequencies>
		</nav>
		</instrumentation>

	<nasal>
		<F-22>
			<file>Aircraft/Lockheed-Martin-FA-22A-Raptor/Nasal/Liveries.nas</file>
		</F-22>
	</nasal>

	</PropertyList>
